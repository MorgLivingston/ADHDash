    <!-- __--__SIGNUP MODAL__--__ -->
  <input type="checkbox" id="signup-modal" class="modal-toggle" />
  <div class="modal">
    <div class="modal-box">
      <div class="flex justify-center">
        <div class="card w-96 bg-base-100 ">
          <div class=" card-body">
            <h2 class="mb-2 text-3xl">Sign Up</h2>
            <form action="/signup" method="post">
              <label for="First Name">First Name
                <input class="w-full max-w-xs input input-bordered" type="text" id="firstName" name="firstName" required>
              </label>
              <label for="Last Name"> Last Name
              <input class="w-full max-w-xs input input-bordered" type="text" id="lastName" name="lastName" required>
              </label>
              <label for="Email Address">
                Email Address
              <input class="w-full max-w-xs input input-bordered" type="email" id="email" name="email" required>
              </label>
              <label for="Username">
                Username
                <input class="w-full max-w-xs input input-bordered" type="text" id="username" name="username"
                  required>
              </label>
              <label for="Password">
                Password
                <input class="w-full max-w-xs input input-bordered" type="password" id="password" name="password"
                  required>
              </label>
            <div class="justify-end card-actions">
              <button class="mt-4 btn">Signup</button>
            </form>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-action">
        <label for="signup-modal" class="btn">X</label>
      </div>
    </div>
  </div>

