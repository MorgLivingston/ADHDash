<!DOCTYPE html>
<html lang="en">
    <head>
      <%- include('partials/head') %>
      <title>Project Details</title>
    </head>    
    <body>

        <%- include('partials/header') %>

      <main class='card w-96 bg-base-100 shadow-xl'>
        <div class='card w-96 bg-base-100 shadow-xl'>
          <h2><%= projectData.title %></h2>
          <h3>Deadline: <%= projectData.dueDate.toLocaleDateString([], { year: 'numeric' , month: 'long' , day: '2-digit', timeZone:'UTC'}) %></h3>
          <h4>Description:</h4>
          <p><%= projectData.description %></p>
        </div>
      
        <div data-id='<%=projectData._id%>'>
          <button id='mark-complete-button'>
            Completed<i class="fas fa-check-circle"></i>
          </button>
          <a href='/dashboard' role='button' class='contrast outline' id='back-to-projects'>Back to Dashboard</a>
          <button id='delete-project-button' class='delete-project'>
            Delete<i class="fa-sharp fa-solid fa-xmark"></i>
          </button> 
         
      
      </main>

      <%- include('partials/footer') %>
      <script src='/js/project.js'></script>

    </body>
</html>